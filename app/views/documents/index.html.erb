<h1>Listing documents</h1>

<table>
  <tr>
    <th>Company</th>
    <th>Issue</th>
    <th>Department</th>
    <th>Description</th>
    <th>Place</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.company_id %></td>
    <td><%= document.issue_id %></td>
    <td><%= document.department_id %></td>
    <td><%= document.description %></td>
    <td><%= document.place %></td>
    <td><%= document.status %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

