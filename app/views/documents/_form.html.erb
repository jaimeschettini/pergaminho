<%= form_for(@document) do |f| %>
  <% if @document.errors.any? %>
    <div id="error_explanation">
      <h2>Não foi possível salvar a empresa:</h2>

      <ul>
      <% @document.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Empresa" %><br />
    <%= f.select :company_id,
          Company.find(:all).collect { |company| [company.name, company.id] },
          :prompt => "Selecione..." %>
  </div>
  <div class="field">
    <%= f.label "Assunto" %><br />
    <%= f.select :issue_id,
          Issue.find(:all).collect { |issue| [issue.description, issue.id] },
          :prompt => "Selecione..." %>
  </div>
  <div class="field">
    <%= f.label "Departamento" %><br />
    <%= f.select :department_id,
          Department.find(:all).collect { |department| [department.name, department.id] },
          :prompt => "Selecione..." %>
  </div>
  <div class="field">
    <%= f.label "Descrição" %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label "Lugar" %><br />
    <%= f.text_field :place, :class => "smaller" %>
  </div>
  <div class="actions">
    <%= f.submit "Salvar" %>
  </div>
<% end %>
