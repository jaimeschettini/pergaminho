<%= form_for @document, :validate => true, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name == 'new' ? 'Criar' : 'Editar' %> documento</legend>

    <div class="control-group">
      <%= f.label "Empresa", :class => 'control-label' %>
      <div class="controls">
        <%= f.select :company_id, 
          [["... ou crie uma nova empresa", "new_company_path", { :class => "new-model-option", "data-action-url" => new_company_path}]] +
          Company.find(:all).collect { |company| [company.name, company.id] },
          :prompt => "Selecione..." %>        
      </div>
    </div>

    <div class="control-group">
      <%= f.label "Assunto", :class => 'control-label' %>
      <div class="controls">
        <%= f.select :issue_id,
          Issue.find(:all).collect { |issue| [issue.description, issue.id] },
          :prompt => "Selecione..." %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "Departamento", :class => 'control-label' %>
      <div class="controls">
        <%= f.select :department_id,
          Department.find(:all).collect { |department| [department.name, department.id] },
          :prompt => "Selecione..." %>
      </div>

    </div>

    <div class="control-group">
      <%= f.label "Descrição", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :description, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "Pasta", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :place, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancelar', documents_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>



  <div class="modal hide fade" id="modal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Criar documento</h3>
  </div>
  <div class="modal-body">
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">Cancelar e fechar</a>
    <a href="#" class="btn btn-primary">Save changes</a>
  </div>
</div>
  