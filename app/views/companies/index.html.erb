<h1>Empresas</h1>

<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th>Nome</th>
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr class="<%= cycle("even", "odd") %>">
    <td><%= company.name %></td>
    <td><%= link_to 'Editar', edit_company_path(company) %></td>
    <td><%= link_to 'Deletar', company, confirm: 'Tem certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

