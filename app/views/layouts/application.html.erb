<!DOCTYPE html>
<html>
<head>
  <title>Sapienti</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

	<div class="navbar navbar-fixed-top">
	    <div class="navbar-inner">
	      <div class="container">
	        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	        </a>
	        <%= link_to "Sapienti", root_path, :class => "brand" %>
	        <div class="nav-collapse">
	          <ul class="nav">
				<li ><%= link_to "Documentos", :documents %></li>
				<li ><%= link_to "Usuários", :users %></li>
				<li ><%= link_to "Empresas", :companies %></li>
				<li ><%= link_to "Assuntos", :issues %></li>
				<li ><%= link_to "Departamentos", :departments %></li>
	          </ul>
	          <ul class="nav pull-right">
				<% if current_user %>
			      <li class="dropdown">
				    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
				    	<i class="icon-user icon-white"></i>
			        	<%= current_user.name %>
			        	<b class="caret"></b>
			      	</a>
				    <ul class="dropdown-menu">
				    	<li>
				    		<%= link_to edit_user_path(current_user.id) do %>
				    			<i class="icon-pencil"></i> Editar perfil
				    		<% end %>
				    	</li>
				    	<li>
				    		<%= link_to edit_user_path(current_user.id) do %>
				    			<i class="icon-random"></i> Trocar senha
			    			<% end %>
				    	</li>
				    </ul>
				  </li>
			      <li>
			      	<%= link_to :logout do %>
			      		<i class="icon-off icon-white"></i> Encerrar sessão
		      		<% end %>
			      </li>
			    <% end %>
	          </ul>
	        </div>
	      </div>
	    </div>
	</div>
		
	<div id="container">
		<div class="row">
      		<div class="span10 offset2">
      			<% flash.each do |key, value| %>
				    <%= content_tag(:div, value, :class => "alert #{key}") %>
  				<% end %>


      			<%= yield %>
      		</div>
      	</div>
	</div>

</div>

</body>
</html>
