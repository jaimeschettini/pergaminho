<div class="login-form">
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, :class => "alert #{key}") %>
  <% end %>
  
  <%= form_tag user_sessions_path, :method => :post do %>
    <fieldset>
      <legend>Acesse a sua conta</legend>

      <div class="control-group">
        <%= label_tag "Login", nil, :class => 'control-label' %>
        <div class="controls">
          <%= text_field_tag :username %>
        </div>
      </div>

      <div class="control-group">
        <%= label_tag "Senha", nil, :class => 'control-label' %>
        <div class="controls">
          <%= password_field_tag :password %>
        </div>
      </div>

      <%= submit_tag "Entrar", :class => 'btn btn-primary btn-large' %>

    </fieldset>
  <% end %>
</div>