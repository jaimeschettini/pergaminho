<%= form_for @department, :validate => true, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name == 'new' ? 'Criar' : 'Editar' %> departamento</legend>

    <div class="control-group">
      <%= f.label "Nome", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancelar', departments_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
